<resources>

    <!-- Base application theme. -->
    <style name="btn_combItem_count">
        <item name="android:layout_width">102dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:textSize">48sp</item>
        <item name="android:background">@drawable/selector_btn_quantity</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  伽利略輸入聯絡資訊數字按鈕主題-深色  -->
    <style name="keyboard_number_dark_theme">
        <item name="android:layout_width">171dp</item>
        <item name="android:layout_height">105dp</item>
        <item name="android:textSize">80sp</item>
        <item name="android:background">@drawable/selector_keyboard_number_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  伽利略輸入聯絡資訊數字按鈕主題-淺色  -->
    <style name="keyboard_number_light_theme">
        <item name="android:layout_width">171dp</item>
        <item name="android:layout_height">105dp</item>
        <item name="android:textSize">80sp</item>
        <item name="android:background">@drawable/selector_keyboard_number_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  長方形主按鈕  -->
    <style name="btn_main_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">48sp</item>
        <item name="android:background">@drawable/selector_btn_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  長方形主按鈕  -->
    <style name="btn_alert_confirm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@drawable/selector_btn_alert_confirm</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="noTitleBarAndAnimation" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CL_H" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CL_V" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Btn_Dialog_01">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/btn_general</item>
        <item name="android:textAllCaps">false</item>
        <!--
        <itme name="android:layout_width">0dp</itme>
        <itme name="android:layout_height">0dp</itme>
        <itme name="android:textColor">#FFF</itme>

        <itme name="android:background">@drawable/btn_general</itme>
        <itme name="android:textAllCaps">false</itme>
        -->

    </style>

    <style name="full_width_dialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="DialogFragmentStyle" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/dialogWindowBackground</item>
    </style>

    <style name="PageTop">
        <item name="android:layout_width">1080dp</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="PageBottom">
        <item name="android:layout_width">1080dp</item>
        <item name="android:layout_height">351dp</item>
