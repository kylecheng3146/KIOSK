<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/popup_grayBg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="389dp"
            android:layout_height="68dp"
            android:src="@drawable/frame_input" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/key1_select"
            android:tag="1" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/key2_select"
            android:tag="2" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/key3_select"
            android:tag="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/key4_select"
            android:tag="4" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/key5_select"
            android:tag="5" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/key6_select"
            android:tag="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/key7_select"
            android:tag="7" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/key8_select"
            android:tag="8" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/key9_select"
            android:tag="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_del"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/keyback_select" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/key0_select"
            android:tag="0" />

        <Button
            android:id="@+id/btn00"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/key00_select"
            android:tag="00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:background="@color/coalBlack">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/selector_btn_back_small" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_ok" />
    </LinearLayout>

</LinearLayout>